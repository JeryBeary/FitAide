<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fitlogo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/workoutButton"
        android:layout_weight="1"
        android:background="@drawable/work"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="New Button"
        android:id="@+id/nutritionButton"
        android:layout_weight="1"
        android:background="@drawable/nutri"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/work">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/runButton"
        android:layout_weight="1"
        android:background="@drawable/run"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/profileButton"
        android:layout_weight="1"
        android:background="@drawable/propic"/>
        </LinearLayout>

</LinearLayout>